<div class="container">

    <div class="row">

        <h2>Update User</h2>

        <div class="col-md-2"></div>

        <div class="col-md-8">
            {{#each userdata}}
            <form class="form-horizontal" method="post" action="/updateUser/{{this.id}}">

                <div class="form-group">
                    <lable for="inputEmail3" class="col-sm-2 control-label">First Name :</lable>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="inputEmail3" placeholder="First Name" name="fname" value="{{this.fname}}">
                    </div>
                </div>
                <div class="form-group">
                    <lable for="inputEmail3" class="col-sm-2 control-label">Last Name :</lable>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="inputEmail3" placeholder="Last Name" name="lname" value="{{this.lname}}">
                    </div>
                </div>
                <div class="form-group">
                    <lable for="inputEmail3" class="col-sm-2 control-label">Email :</lable>
                    <div class="col-sm-10">
                        <input type="email" class="form-control" id="inputEmail3" placeholder="Email" name="email" value="{{this.email}}">
                    </div>
                </div>
                <div class="form-group">
                    <lable for="inputPassword3" class="col-sm-2 control-label">Profession :</lable>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="inputPassword3" placeholder="Profession" name="prof" value="{{this.prof}}">
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="submit" class="btn btn-success" id="adduser">Update Record</button>
                    </div>
                </div>
            </form>
            {{/each}}
        </div>

        <div class="col-md-2"></div>

    </div>

</div>